---
const today = new Date();
import SocialLinks from "./SocialLinks.astro";
---

<footer>
  &copy; {today.getFullYear()} LilleAila. All rights reserved.
  <SocialLinks class="social-links" />
</footer>
<style>
  footer {
    padding: 2em 1em 3em 1em;
    background: var(--bg);
    color: var(--fg);
    text-align: center;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    margin-top: 1em;
  }
</style>
